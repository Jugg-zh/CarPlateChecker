<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity">

    <TextView
        android:id="@+id/plateNum"
        android:layout_width="294dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:text="Please press the button to open camera" />

    <ImageButton
        android:id="@+id/startCameraButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundcorner"
        android:tint="#FFFFFF"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/editPlate"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/rounded_border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text=""
        android:visibility="invisible" />

    <EditText
        android:id="@+id/slotNum"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="154dp"
        android:background="@drawable/rounded_border_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text=""
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ok"
        android:layout_width="64dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-137dp"
        android:layout_marginStart="-137dp"
        android:layout_marginTop="207dp"
        android:layout_toEndOf="@+id/editPlate"
        android:layout_toRightOf="@+id/editPlate"
        android:background="@drawable/okbutton"
        android:tint="#000000"
        android:visibility="invisible"
        app:srcCompat="?android:attr/textCheckMark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="106dp"
        android:text="Edit Plate :"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="152dp"
        android:text="Slot No. :"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/roundcorner_upload"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <TextView
        android:id="@+id/unregisteredMsg"
        android:layout_width="312dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="102dp"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="47dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:visibility="visible"
        android:gravity="center_horizontal" />

</RelativeLayout>